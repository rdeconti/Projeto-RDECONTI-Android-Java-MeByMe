<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.prosper.day.module01main.ModuleControlMainActivity"
    style="@style/constraintLayout">

    <ImageView
        android:id="@+id/imageView"
        android:contentDescription="@string/content_description"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        style="@style/imageViewDocument" />

    <ScrollView
        android:id="@+id/scrollViewVertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        style="@style/scrollView">

        <TextView
            android:id="@+id/textViewLongText"
            android:text="@string/app_AboutUs"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="230dp"
            style="@style/textViewDocument" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
