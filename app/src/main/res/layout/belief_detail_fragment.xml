<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".module05belief.ModuleFragmentBeliefDetail"
    style="@style/constraintLayout">

    <TextView
        android:id="@+id/mTextViewValuePhaseOverview"
        android:text="@string/label_screen_number_test_01"
        app:layout_constraintBottom_toBottomOf="@+id/textViewText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible"
        style="@style/textViewValueVisible" />

    <TextView
        android:id="@+id/mTextViewValueNameOverview"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:text="@string/label_screen_string_test_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/textViewValueVisible" />

    <TextView
        android:id="@+id/textViewMessage"
        android:text="@string/message_data_not_exist"
        app:layout_constraintBottom_toBottomOf="@+id/textViewText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/textViewMessage" />

    <ImageView
        android:id="@+id/imageViewImage"
        android:contentDescription="@string/content_description"
        app:layout_constraintBottom_toTopOf="@+id/textViewText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTextViewValueNameOverview"
        app:srcCompat="@mipmap/ic_launcher_background"
        style="@style/imageBelief" />

    <TextView
        android:id="@+id/textViewText"
        android:text="@string/label_screen_string_test_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewImage"
        style="@style/textViewValueQuestion" />

</androidx.constraintlayout.widget.ConstraintLayout>